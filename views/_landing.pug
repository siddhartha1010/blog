div
  h1.text-3xl.font-bold.mx-3.mb-4.text-center BLOG ARTICLES
  a.no-underline.mx-3(href='/new')
    button#new.overflow-hidden.relative.w-32.p-2.h-12.bg-black.text-white.border-none.rounded-md.text-xl.font-bold.cursor-pointer.relative.z-10.group
      | New Article
      span.absolute.w-36.h-32.-top-8.-left-2.bg-white.rotate-12.transform.scale-x-0.transition-transform.duration-1000.origin-left(class='group-hover:scale-x-100 group-hover:duration-500')
      span.absolute.w-36.h-32.-top-8.-left-2.bg-emerald-500.rotate-12.transform.scale-x-0.transition-transform.duration-700.origin-left(class='group-hover:scale-x-100 group-hover:duration-700')
      span.absolute.w-36.h-32.-top-8.-left-2.bg-emerald-500.rotate-12.transform.scale-x-0.transition-transform.duration-500.origin-left(class='group-hover:scale-x-50 group-hover:duration-1000')
      span.duration-100.opacity-0.absolute.left-6.z-10(class='group-hover:opacity-100 group-hover:duration-1000 top-2.5') Create
  each article in articles
    .mr-10
      .w-full.ms-4.my-3.mt-3.rounded-lg.border.border-stone.bg-stone-100.p-4.shadow-lg(class='sm:p-6 lg:p-8')
        .flex.items-center.gap-4
          span.shrink-0.rounded-full.bg-emerald-400.p-2.text-white
          p.font-medium.text-emerald-600(class='sm:text-lg')=article.title
        p.text-gray-400.mx-4=article.createdAt.toLocaleDateString()
        //- p.mt-4.text-gray-600=article.description
        p.mt-4.text-gray-600
          | #{article.description.split(' ').slice(0, 20).join(' ')}
        p.mt-4.text-gray-400.mx-4 Learn more...

        .mt-6(class='sm:flex sm:gap-4')
          a#view.inline-block.w-full.rounded-lg.bg-emerald-500.px-5.py-3.text-center.text-sm.font-semibold.text-white(href=`/article/${article.slug}` class='sm:w-auto') View
          a#edit.inline-block.w-full.rounded-lg.bg-emerald-500.px-5.py-3.text-center.text-sm.font-semibold.text-white(href=`/edit/${article.slug}` class='sm:w-auto') Edit
